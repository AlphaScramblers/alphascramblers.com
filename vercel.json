{
  "cleanUrls": true,

  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "**/*.html", "use": "@vercel/static" }
  ],

  "routes": [
    { "source": "/aboutus", "destination": "/AboutUs/Aboutus.html" },
    { "source": "/helpandsupport", "destination": "/helpandsupport/helpandsupport.html" },
    { "source": "/PsychometricTest", "destination": "/Psychometric_Tests/psy.html" }
  ],

  "functions": {
    "api/generate-report.js": {
      "includeFiles": "streamtemplates/*"
    }
  }
}
